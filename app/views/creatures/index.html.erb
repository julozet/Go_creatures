
<h1 id="h1-index">All the amazing creatures we have!</h1>
<br>
<div class="card-container">
  <% @creatures.each do |creature| %>
    <%= link_to creature_path(creature) do %>
      <div class="card-product">
        <%= cl_image_tag creature.photo.key %>
        <div class="card-product-infos" id="card-text">
          <h2><%=creature.name%></h2>
          <p><%= creature.address %></p>
          <p><%= creature.kind %></p>
          <p><strong><%= creature.price %>$</strong></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
