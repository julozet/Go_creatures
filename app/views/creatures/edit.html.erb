<div class="container">
  <h3>Edit a creature</h3>
  <%= simple_form_for @creature do |f| %>
    <%= f.input :name %>
    <%= f.input :kind %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :price %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
