<div class="container">
  <h3>Add a creature</h3>
  <div class="container-form">
    <%= simple_form_for @creature do |f| %>
      <%= f.input :name %>
      <%= f.input :kind %>
      <%= f.input :description %>
      <%= f.input :address %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: 'btn-dark' %>
    <% end %>
  </div>
</div>
